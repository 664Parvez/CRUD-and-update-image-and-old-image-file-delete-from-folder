<%- include('./partials/header.ejs') %>

<div class="container">
    <a href="http://localhost:3000/data-form">New Data </a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Profile Image</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            <% items.map((item, index=1) => { %>

            <tr>
                <th scope="row"><%= index + 1%></th>
                <td><img src="<%= item.image%>" width="50" height="50" alt=""></td>
                <td><%= item.firstName%></td>
                <td><%= item.lastName%></td>
                <td><%= item.email%></td>
                <td><a href="/update/<%= item._id%>" class="btn btn-primary">Update</a></td>
                <td><a href="/delete/<%= item._id%>" class="btn btn-danger">Delete</a></td>
            </tr>

            <% }) %>

        </tbody>
    </table>
</div>


<%- include('./partials/footer.ejs')%>